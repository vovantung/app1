pipeline {
    agent any
    environment {
            KUBECONFIG = '/var/jenkins_home/.kube/config'
        }

    stages {
        stage('Clone') {
//            steps {
//                 sh '''
//                 git clone https://github.com/vovantung/app1.git
//                 cd app1
//                 git status
//                 '''
//             }
                steps{
                git branch: 'main', url: 'https://github.com/vovantung/app1.git'
                }
        }
        stage('Build app') {
            steps {
               sh '''
                   mvn clean install
               '''
                  }
        }

        stage('Get App Version') {
            steps {
                script {
                    sh '''
                                    mvn -B help:evaluate -Dexpression=project.version -q -DforceStdout > version.txt
                                '''
                                def rawVersion = readFile('version.txt').trim()

                                // Cách 1: Dùng regex xóa escape ANSI nếu nhận dạng được
                                def ansiFree = rawVersion.replaceAll(/\u001B\[[0-9;]*[mK]/, '')

                                // Cách 2: Nếu vẫn lỗi, lọc ký tự in được (an toàn tuyệt đối)
                                def cleanVersion = ansiFree.replaceAll('[^\\x20-\\x7E]', '')

                                echo "Raw Version: >>>${rawVersion}<<<"
                                echo "ANSI-Free: >>>${ansiFree}<<<"
                                echo "Final Clean Version: ${cleanVersion}"

                                env.APP_VERSION = cleanVersion

                }
            }
        }

        stage('Build Docker Image') {
            steps {
                sh '''
                docker build -t app1:${APP_VERSION} .
                docker tag app1:${APP_VERSION} 211125364313.dkr.ecr.ap-southeast-1.amazonaws.com/app1:${APP_VERSION}
                aws ecr get-login-password --region ap-southeast-1 | docker login --username AWS --password-stdin 211125364313.dkr.ecr.ap-southeast-1.amazonaws.com
                docker push 211125364313.dkr.ecr.ap-southeast-1.amazonaws.com/app1:${APP_VERSION}
                '''
            }
        }
        stage('Prepare Deployment YAML') {
                    steps {
                        sh '''
                        cp deployment.yaml.template deployment.yaml
                        sed -i "s/__VERSION__/${APP_VERSION}/g" deployment.yaml
                        '''
                    }
                }
        stage('Deploy to Minikube') {
            steps {
                sh '''
                    kubectl apply -f deployment.yaml
                '''
            }
        }
    }
}
