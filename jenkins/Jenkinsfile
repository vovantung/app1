pipeline {
    agent any
    environment {
            KUBECONFIG = '/var/jenkins_home/.kube/config'
        }

    stages {
        stage('Clone') {
//            steps {
//                 sh '''
//                 git clone https://github.com/vovantung/app1.git
//                 cd app1
//                 git status
//                 '''
//             }
                steps{
                git branch: 'main', url: 'https://github.com/vovantung/app1.git'
                }
        }
        stage('Build app') {
            steps {
               sh '''
                   mvn clean install
               '''
                  }
        }

        stage('Build Docker Image') {
            steps {
                sh '''
                docker build -t app1:1.0 .
                docker tag app1:1.0 211125364313.dkr.ecr.ap-southeast-1.amazonaws.com/app1:1.0
                docker push 211125364313.dkr.ecr.ap-southeast-1.amazonaws.com/app1:1.0
                '''
            }
        }
        stage('Deploy to Minikube') {
            steps {
                sh '''



                    kubectl apply -f deployment.yaml
                    kubectl apply -f service.yaml
                '''
            }
        }
    }
}
