pipeline {
  agent {
    kubernetes {
      yaml """
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: test
    image: gcr.io/kaniko-project/executor:latest
    tty: true
  - name: jnlp
    image: jenkins/inbound-agent:latest
    tty: true
"""
    }
  }

  stages {
    stage('Test') {
      steps {
        container('test') {
          sh 'echo "Jenkins agent chạy trong pod Kubernetes thành công!"'
        }
      }
    }
  }
}
